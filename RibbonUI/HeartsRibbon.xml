<Application xmlns="http://schemas.microsoft.com/windows/2009/Ribbon">
	<Application.Commands>
		<Command Name="cmdTabGame" LabelTitle="Gra" />
		<Command Name="cmdGroupGame" LabelTitle="Gra" />
		<Command Name="cmdGameNew" Comment="Nowa gra" Symbol="IDC_GAME_NEW">
			<Command.LabelTitle>
				<String Id ="200">Nowa gra</String>
			</Command.LabelTitle>
			<Command.SmallImages>
				<Image Id="211">res/new_game_32x32.png</Image>
			</Command.SmallImages>
		</Command>

		<Command Name="cmdGameOpen" Comment="Otwórz grę" Symbol="IDC_GAME_OPEN">
			<Command.LabelTitle>
				<String Id ="201">Otwórz grę</String>
			</Command.LabelTitle>
			<Command.SmallImages>
				<Image Id="212">res/new_game_32x32.png</Image>
			</Command.SmallImages>
		</Command>

		<Command Name="cmdFileMenu"/>
		<Command Name="cmdExit" Symbol="IDC_CMD_EXIT">
			<Command.LabelTitle>
				<String Id ="213">Wyjdź</String>
			</Command.LabelTitle>
		</Command>
		<Command Name="cmdQat"/>
	</Application.Commands>

	<Application.Views>
		<Ribbon>
	
			<Ribbon.ApplicationMenu>
				<ApplicationMenu CommandName="cmdFileMenu">
					<MenuGroup Class="MajorItems">
						<Button CommandName="cmdExit" />
					</MenuGroup>
				</ApplicationMenu>
			</Ribbon.ApplicationMenu>

			<Ribbon.Tabs>
				<Tab CommandName="cmdTabGame" >
					<Group CommandName="cmdGroupGame" SizeDefinition="TwoButtons" >
						<Button CommandName="cmdGameNew"/>
						<Button CommandName="cmdGameOpen"/>
					</Group>
				</Tab>
			</Ribbon.Tabs>
			<Ribbon.QuickAccessToolbar>
				<QuickAccessToolbar CommandName="cmdQat" />
			</Ribbon.QuickAccessToolbar>
		</Ribbon>
	</Application.Views>
</Application>